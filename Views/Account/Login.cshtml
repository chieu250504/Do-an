
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ĐĂNG NHẬP";

}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Tải Tailwind CSS & Font Awesome -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- CSS (Đồng bộ với các trang khác) -->
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

        :root {
            --primary-color: #c0392b;
            --accent-color: #f1c40f;
            --dark-bg: #2d3436;
            --card-bg: #3c4043;
            --text-color: #e6e6e6;
            --input-bg: #5a5f63;
        }

       

        .login-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-box {
            background-color: var(--card-bg);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
            width: 380px;
            padding: 30px 40px;
            text-align: left;
            border-radius: 10px;
            color: var(--text-color);
            margin-left: auto;
            margin-right: auto;
            margin-top:50px;
            margin-bottom:30px;
        }

            .login-box h2 {
                font-size: 24px;
                font-weight: 700;
                color: var(--text-color);
                margin-bottom: 8px;
            }

        .title-line {
            width: 60px;
            height: 3px;
            background-color: #f06292;
            border-radius: 1.5px;
            margin-bottom: 25px;
        }

        .input-box {
            background-color: var(--input-bg);
            color: var(--text-color);
            border: 1px solid #666;
            transition: border-color 0.3s, box-shadow 0.3s;
            width: 100%;
            padding: 12px;
            border-radius: 8px;
        }

            .input-box:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 0 2px rgba(241, 196, 15, 0.5);
                outline: none;
            }

            .input-box::placeholder {
                color: #b0b0b0;
            }

        .btn-login {
            background-color: var(--accent-color);
            color: #333;
            font-weight: 600;
            transition: background-color 0.2s, transform 0.1s;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

            .btn-login:hover {
                background-color: #e9b900;
            }

            .btn-login:active {
                transform: translateY(1px);
            }

        .options-link {
            color: #f06292;
            text-decoration: none;
            transition: color 0.2s;
            font-size: 14px;
        }

            .options-link:hover {
                color: #c03a6a;
                text-decoration: underline;
            }

        .register-link-container {
            margin-top: 20px;
            text-align: center;
        }

        .register-text {
            color: #b0b0b0;
            font-size: 14px;
        }
    </style>
</head>

    <div class="login-box">
        <h2>ĐĂNG NHẬP</h2>
        <div class="title-line"></div>

        <!-- HIỂN THỊ THÔNG BÁO THÀNH CÔNG (TỪ TempData/Register) -->
        @if (ViewBag.Success != null)
        {
            <div class="bg-green-700/50 text-white p-3 rounded-lg mb-4 text-sm text-center">
                <i class="fas fa-check-circle mr-2"></i>@ViewBag.Success
            </div>
        }

        <!-- HIỂN THỊ LỖI -->
        @if (ViewBag.Error != null)
        {
            <div class="bg-red-700/70 text-white p-3 rounded-lg mb-4 text-sm text-center">
                <i class="fas fa-exclamation-triangle mr-2"></i>@ViewBag.Error
            </div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-5">
                <label class="block text-sm font-medium text-gray-400 mb-1">Địa chỉ Email</label>
                @Html.TextBox("Email", null, new { @class = "input-box", placeholder = "Nhập email của bạn", type = "email", required = "required" })
            </div>

            <div class="form-group mb-5">
                <label class="block text-sm font-medium text-gray-400 mb-1">Mật khẩu</label>
                @Html.Password("Password", null, new { @class = "input-box", placeholder = "Mật khẩu", required = "required" })
            </div>

            <div class="flex justify-end mb-6">
                <a href="@Url.Action("ForgotPassword", "Account")" class="options-link">Quên mật khẩu?</a>
            </div>

            <!-- Nút Đăng nhập -->
            <button type="submit" class="btn-login">ĐĂNG NHẬP</button>
        }

        <div class="register-link-container">
            <span class="register-text">Chưa có tài khoản?</span>
            <a href="@Url.Action("Register", "Account")" class="options-link ml-1">Đăng ký ngay</a>
        </div>
    </div>

</html>
