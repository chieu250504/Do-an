@{
    // Thiết lập Title và bỏ Layout (để hiển thị độc lập)
    ViewBag.Title = "QUÊN MẬT KHẨU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

   
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

        :root {
            --primary-color: #c0392b;
            --accent-color: #f1c40f;
            --dark-bg: #2d3436;
            --card-bg: #3c4043;
            --text-color: #e6e6e6;
            --input-bg: #5a5f63;
        }

        

        .forgot-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin-left: auto; margin-right: auto; margin-top: 50px; margin-bottom: 30px;
        }

        .forgot-box {
            background-color: var(--card-bg);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
            width: 380px;
            padding: 30px 40px;
            text-align: left;
            border-radius: 10px;
            color: var(--text-color);
        }

            .forgot-box h2 {
                font-size: 24px;
                font-weight: 700;
                color: var(--text-color);
                margin-bottom: 8px;
            }

        .title-line {
            width: 60px;
            height: 3px;
            background-color: #f06292;
            border-radius: 1.5px;
            margin-bottom: 25px;
        }

        .input-box {
            background-color: var(--input-bg);
            color: var(--text-color);
            border: 1px solid #666;
            transition: border-color 0.3s, box-shadow 0.3s;
            width: 100%;
            padding: 12px;
            border-radius: 8px;
        }

            .input-box:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 0 2px rgba(241, 196, 15, 0.5);
                outline: none;
            }

            .input-box::placeholder {
                color: #b0b0b0;
            }

        .btn-send {
            background-color: var(--accent-color);
            color: #333;
            font-weight: 600;
            transition: background-color 0.2s, transform 0.1s;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

            .btn-send:hover {
                background-color: #e9b900;
            }

            .btn-send:active {
                transform: translateY(1px);
            }

        .back-link {
            color: #f06292;
            text-decoration: none;
            transition: color 0.2s;
            font-size: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }

            .back-link:hover {
                color: #c03a6a;
                text-decoration: underline;
            }
    </style>
</head>

    <div class="forgot-wrapper">
        <div class="forgot-box">
            <h2>QUÊN MẬT KHẨU</h2>
            <div class="title-line"></div>

            @if (ViewBag.Message != null)
            {
                // Hiển thị thông báo (ví dụ: đã gửi email thành công)
                <div class="bg-green-700/50 text-white p-3 rounded-lg mb-4 text-sm text-center">
                    <i class="fas fa-check-circle mr-2"></i>@ViewBag.Message
                </div>
            }
            else
            {
                // Bọc toàn bộ HTML/Form vào đây để tránh lỗi Parser Razor
                @Html.Raw("<p class='text-gray-400 mb-6 text-sm'>Vui lòng nhập địa chỉ email của bạn. Chúng tôi sẽ gửi liên kết đặt lại mật khẩu cho bạn.</p>")

                using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-5">
                        <label class="block text-sm font-medium text-gray-400 mb-1">Địa chỉ Email</label>
                        @Html.TextBox("Email", null, new { @class = "input-box", placeholder = "Nhập email của bạn", type = "email", required = "required" })
                    </div>

                    <!-- Nút Gửi liên kết -->
                    <button type="submit" class="btn-send">GỬI LIÊN KẾT ĐẶT LẠI</button>
                }
            }

            <!-- Quay về trang đăng nhập -->
            <a href="@Url.Action("Login", "Account")" class="back-link">
                <i class="fas fa-arrow-left mr-2"></i> Quay lại Đăng nhập
            </a>

        </div>
    </div>

</html>

